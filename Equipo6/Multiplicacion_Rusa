multiplicador = int(input("Ingresa el multiplicador: "))
multiplicando = int(input("Ingresa el multiplicando: "))

suma = 0
if multiplicador >= 0 and multiplicando >= 0:
    while multiplicador >= 1:
        print(multiplicador, multiplicando)
        if multiplicador % 2 != 0:
            suma += multiplicando
        multiplicador //= 2
        multiplicando *= 2
    print("Resultado = ", suma)
else:
    print("Error. Verifica que el numero ingresado sea mayor o igual a 0")
