while True:
        n = int(input("Introduce el número de elementos (debe ser mayor a 0): "))
        if n > 0:
            break
        else:
            print("El número debe ser mayor a 0.")

lista = []
for i in range(n):
    while True:
            elemento = int(input(f"Introduce el elemento {i + 1}: "))
            lista.append(elemento)
            break

for i in range(n):
    if lista[i] % 2 == 0: 
        print(f"pos {i}, valor {lista[i]}")
